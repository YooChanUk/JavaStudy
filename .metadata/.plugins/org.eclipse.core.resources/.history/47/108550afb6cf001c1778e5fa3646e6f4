package MidFixStudent;

public class Search 
{
	public void search(Student[] std)
	{
		Scanner sc = new Scanner(System.in);
		int n = 0;
		
		System.out.print("�˻��� �л��� �й��� �������� : ");
		n = sc.nextInt();
		
